@using EXONLOG.Model.Stocks

<div class="modal fade show" style="display: @(IsOpen ? "block" : "none"); background: rgba(0,0,0,0.5)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-primary">Stock Details</h5>
                <button type="button" class="btn-close" @onclick="CloseModal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12 d-flex gap-5">
                        <p><span class="barcode">@Stock.StockID</span> </p>
                        <p><strong>Created Date:</strong> @Stock.CreateDate.ToString("dd MMM yyyy")</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Stock Name:</strong> @Stock.StockName</p>
                        <p><strong>Material:</strong> @Stock.Material?.MaterialName</p>
                        <p><strong>Stock Type:</strong> @Stock.StockType</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Total Quantity:</strong> @Stock.Quantity.ToString("N2")</p>
                        <p><strong>Reserved Quantity:</strong> @Stock.ReservedQuantity.ToString("N2")</p>
                        <p><strong>Pending Quantity:</strong> @Stock.PendingQuantity.ToString("N2")</p>
                        <p><strong>Free Quantity:</strong> @Stock.FreeQuantity.ToString("N2")</p>
                    </div>
                    <div class="col-md-12">
                        <p><strong>Notes:</strong><p class="border border-1 rounded border-secondary p-3">@Stock.Notes</p></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Stock Stock { get; set; }

    [Parameter]
    public bool IsOpen { get; set; }

    [Parameter]
    public EventCallback<bool> IsOpenChanged { get; set; }

    private void CloseModal()
    {
        IsOpen = false;
        IsOpenChanged.InvokeAsync(false);
    }
}