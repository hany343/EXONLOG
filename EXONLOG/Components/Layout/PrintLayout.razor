
@inherits LayoutComponentBase
@inject ConnectionStringService ConnectionService

<div class="page">

    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        @@media print {
            body * {
                visibility: hidden;
            }

            .printable-area, .printable-area * {
                visibility: visible;
            }

            .printable-area {
                position: absolute;
                left: 0;
                top: 0;
                width: 100%;
                height: 100%;
                margin: 0;
                padding: 0;
            }
        }
    </style>
    <main>

        <article class="printable-area">
            @Body
        </article>
    </main>
</div>

