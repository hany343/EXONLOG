@page "/customer/report/{CustomerId:int}"
@using EXONLOG.Data
@using EXONLOG.Model.Outbound
@using EXONLOG.Model.Shared
@using Microsoft.EntityFrameworkCore

@inject EXONContext DbContext

<h3>Customer Report</h3>

@if (Customer == null)
{
    <p>Loading...</p>
}
else
{
    <div>
        <h4>Customer Information</h4>
        <p><strong>Name:</strong> @Customer.Name</p>
        <p><strong>Mobile:</strong> @Customer.ContactNumber</p>
        <p><strong>Address:</strong> @Customer.Address</p>
    </div>

    <div>
        <h4>Contracts Summary</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Contract Ref</th>
                    <th>Material</th>
                    <th>Quantity</th>
                    <th>Start Date</th>
                    <th>Deadline</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contract in Customer.Contracts)
                {
                    <tr>
                        <td>@contract.RefNumber</td>
                        <td>@contract.Material.Name</td>
                        <td>@contract.Quantity</td>
                        <td>@contract.StartDate.ToString()</td>
                        <td>@contract.Deadline.ToString()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    [Parameter] public int CustomerId { get; set; }
    private Customer Customer { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Customer = await DbContext.Customers
            .Include(c => c.Contracts)
            .ThenInclude(c => c.Material)
            .FirstOrDefaultAsync(c => c.CustomerID == CustomerId);
    }
}
