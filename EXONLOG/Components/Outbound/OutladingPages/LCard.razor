@page "/lcard"
@layout EXONLOG.Components.Layout.PrintLayout
@inject IJSRuntime JS


<button @onclick="PrintPage" class=" float-end print-button">Print Page</button>


<div class="container" dir="rtl">
    <div id="printable-area" class="main-border">
        <!-- Header Section -->
        <FieldGroup Title="معلومات الشركة">
            <div class="header-section">
                <div class="company-logo">
                    <img src="images/LCard_0C9B62D7-66CB-4152-95C5-87CEFD905139_.png" />
                </div>
                <div class="company-title">
                    <div>اسم الشركة باللغة العربية</div>
                    <div>Company name in english</div>
                    <div>Logistics Management - إدارة اللوجيستيات</div>
                </div>
            </div>
        </FieldGroup>

        <Separator />

        <!-- Barcode Section -->
        <FieldGroup Title="معلومات الباركود">
            <div class="barcode-section position-relative ">
                <div class="barcode">*30543*</div>
                <div class="flex-column justify-content-center text-center float-end align-middle position-absolute top-0">
                    <div class="fw-bold">التاريخ</div>
                    <div>18/11/2024  11:30 AM</div>
                </div>
            </div>
        </FieldGroup>

        <!-- Main Content -->
        <div class="content-grid">
            <div class="left-column">
                <FieldGroup Title="معلومات التوريد">
                    <FieldItem Label="رقم امر التوريد" Value="Tuesday" />
                    <FieldItem Label="رقم العقد" Value="Form Letter" />
                    <FieldItem Label="الكمية المطلوبة" Value="213.89 طن" />
                </FieldGroup>

                <FieldGroup Title="معلومات النقل">
                    <FieldItem Label="رقم البطاقة" Value="136" />
                    <FieldItem Label="وحدة مرور" Value="Radar" />
                    <FieldItem Label="مقاول النقل" Value="Font Name" />
                </FieldGroup>
            </div>

            <div class="right-column">
                <FieldGroup Title="معلومات العميل">
                    <FieldItem Label="اسم العميل" Value="Standard" />
                    <FieldItem Label="الصنف" Value="Friday" />
                    <FieldItem Label="تانك/رقم محطة" Value="String" />
                </FieldGroup>

                <FieldGroup Title="معلومات المركبة">
                    <FieldItem Label="اسم السائق" Value="Data2 labels" />
                    <FieldItem Label="رقم الجرار" Value="Yellow" />
                    <FieldItem Label="رقم المقطورة" Value="Olive" />
                </FieldGroup>
            </div>
        </div>

        <Separator />

        <!-- Footer Section -->
        <FieldGroup Title="التوقيعات والمعلومات الإضافية">
            <div class="footer-section">
                <img src="images/LCard_146978ED-5C37-4E51-9D0F-D8B084DBCF55_.png" />
                <div class="footer-text">
                    <span>FQS-01-03</span>
                    <span>01/01/2020</span>
                    <span>Edition No.(2)</span>
                    <span>01/02/2025</span>
                    <span>19:50:54</span>
                    <span>Generated by LoBridge System 'Hany Ragab' lobridge2020@gmail.com</span>
                </div>
            </div>
        </FieldGroup>
    </div>
</div>

@code{

    private async Task PrintPage()
    {
        await JS.InvokeVoidAsync("window.print");
    }
}